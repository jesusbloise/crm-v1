{
  "name": "crm-v1",
  "main": "expo-router/entry",
  "version": "1.0.1",
  "scripts": {
    "build:web": "NODE_ENV=production expo export -p web --clear --output-dir dist",
    "build:web:vercel": "expo export -p web --clear --output-dir dist",
    "preview:web": "npx serve dist -l 5174",
    "start": "expo start",
    "start:production": "EXPO_PUBLIC_ENV=production expo start",
    "start:development": "EXPO_PUBLIC_ENV=development expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "update:preview": "eas update --branch preview -m \"pequeños fixes\"",
    "update:production": "eas update --branch production -m \"Update producción\"",
    "build:apk:preview": "eas build -p android --profile preview",
    "build:apk:production": "eas build -p android --profile production",
    "build:ios:production": "eas build -p ios --profile production",
    "deploy:web": "echo \"push a main y Vercel auto-deploy; si cambias env → Redeploy en Vercel\"",
    "sync:check": "echo \"✅ Backend URL: $EXPO_PUBLIC_API_URL\" && echo \"Todas las plataformas deben usar la misma URL para sincronizar datos\""
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@tanstack/react-query": "^5.90.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "expo": "54.0.17",
    "expo-auth-session": "~7.0.8",
    "expo-constants": "~18.0.10",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.10",
    "expo-image-picker": "~17.0.8",
    "expo-linking": "~8.0.8",
    "expo-notifications": "~0.32.12",
    "expo-router": "~6.0.13",
    "expo-splash-screen": "~31.0.10",
    "expo-sqlite": "^16.0.8",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-updates": "~29.0.12",
